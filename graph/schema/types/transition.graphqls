type Transition {
    id: ID!
    title: String!

    # Transitions
    from: CampaignNode!
    to: CampaignNode!

    transitionType: [TransitionType!]!
    description: String!
}

enum TransitionType {
    CLUE
    TEMPORAL
    GEOGRAPHIC
    RANDOMLY
    PROACTIVELY
    PLAYERDRIVEN
    HYBRID
}

input TransitionInput {
    title: String
    description: String

    fromNode: ID
    toNode: ID

    transitionType: [TransitionType!]
}
